{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@adapter": [
                "./src/adapter"
            ],
            "@adapter/*": [
                "./src/adapter/*"
            ],
            "@domain": [
                "./src/domain"
            ],
            "@domain/*": [
                "./src/domain/*"
            ],
            "@presentation": [
                "./src/presentation"
            ],
            "@presentation/*": [
                "./src/presentation/*"
            ],
            "@infrastructure": [
                "./src/infrastructure"
            ],
            "@infrastructure/*": [
                "./src/infrastructure/*"
            ],
            "crypto": [
                "./node_modules/@types/node/crypto"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
